%table.table
  %thead.thead-light
    %tr
      %th{:scope => "col"} id
      %th{:scope => "col"} title
      %th{:scope => "col"} content
      -# statusはチェック状態にしておく
      %th{:scope => "col"} status
      %th{:scope => "col"} created_at
      %th{:scope => "col"} updated_at
      %th{:scope => "col"} edit
      %th{:scope => "col"} delete
    = render partial: 'layouts/admin/articles/article', collection: @articles